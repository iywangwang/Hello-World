            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Border BorderBrush="#8FC0E2" BorderThickness="0.5" CornerRadius="13">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
